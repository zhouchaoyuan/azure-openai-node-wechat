{
  "name": "azure-openai-node-wechat",
  "version": "1.0.0",
  "description": "This repository contains code for a Node.js application that uses the OpenAI API to enable real-time chatting with a WeChat official account. With this code, you can build your own chatbot for your WeChat official account using the OpenAI API.",
  "author": "chaoyuanzhou@foxmail.com",
  "license": "ISC",
  "keywords": [
    "chatgpt",
    "chatbot",
    "express",
    "azure-openai",
    "openai",
    "ai"
  ],
  "main": "index.ts",
  "engines": {
    "node": "^16 || ^18 || ^19"
  },
  "scripts": {
    "start": "esno ./src/index.ts",
    "dev": "esno watch ./src/index.ts",
    "prod": "node ./build/index.mjs",
    "build": "pnpm clean && tsup",
    "clean": "rimraf build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "common:cleanup": "rimraf node_modules && rimraf pnpm-lock.yaml"
  },
  "dependencies": {
    "axios": "^1.3.5",
    "azure-openai": "^0.9.4",
    "dotenv": "^16.0.3",
    "esno": "^0.16.3",
    "express": "^4.18.2",
    "jssha": "^3.3.0",
    "openai": "^3.2.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.35.3",
    "@types/node": "^18.15.11",
    "eslint": "^8.37.0",
    "rimraf": "^4.4.1",
    "tsup": "^6.7.0",
    "typescript": "^5.0.3"
  }
}
